                    <!--app:layout_constraintHorizontal_bias="0.502"-->
                    <!--app:layout_constraintStart_toStartOf="parent" />-->

                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>
        </RelativeLayout></android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>